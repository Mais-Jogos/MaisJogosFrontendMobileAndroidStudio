<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imgVoltarSkinEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/titleEditarSkin"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/titleEditarSkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Skin"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="356dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEditarSkin"
        app:layout_constraintVertical_bias="0.239">

        <ImageButton
            android:id="@+id/btnEditarImgSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient_button"
            app:layout_constraintStart_toEndOf="@+id/imgSkin"
            app:layout_constraintTop_toTopOf="@+id/imgSkin"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/imgMoedaSkinEditar"
            android:layout_width="40dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtEditarValorSkin"
            app:layout_constraintStart_toStartOf="@+id/txtEditarNomeSkin"
            app:layout_constraintTop_toBottomOf="@+id/txtEditarNomeSkin"
            app:srcCompat="@drawable/kapicoin_icon_1" />

        <EditText
            android:id="@+id/txtEditarValorSkin"
            android:layout_width="93dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="text"
            android:text=" $ 65"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgMoedaSkinEditar"
            app:layout_constraintTop_toBottomOf="@+id/txtEditarNomeSkin" />

        <Button
            android:id="@+id/btnEditarSkin"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:background="@drawable/gradient_button"
            android:text="Editar"
            android:textSize="12sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgSkin"
            app:layout_constraintTop_toBottomOf="@+id/txtEditarValorSkin" />

        <Button
            android:id="@+id/btnExcluirSkin"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:background="@drawable/gradient_button"
            android:text="Excluir"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEditarValorSkin"
            app:backgroundTint="@null"/>

        <EditText
            android:id="@+id/txtEditarNomeSkin"
            android:layout_width="133dp"
            android:layout_height="61dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="Sr. Rocha"
            android:textColor="#F8F8F8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnEditarImgSkin"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnEditarNomeSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient_button"
            app:layout_constraintStart_toEndOf="@+id/txtEditarNomeSkin"
            app:layout_constraintTop_toTopOf="@+id/txtEditarNomeSkin"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/btnEditarValorSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient_button"
            app:layout_constraintStart_toEndOf="@+id/txtEditarValorSkin"
            app:layout_constraintTop_toTopOf="@+id/txtEditarValorSkin"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/imgSkin"
            android:layout_width="108dp"
            android:layout_height="185dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/araraazulcyberpunk" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>