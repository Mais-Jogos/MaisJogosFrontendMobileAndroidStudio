<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleReviewEditar"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Meus Reviews"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <ImageView
        android:id="@+id/imgReviewEditar"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/_icon__book_" />

    <ImageView
        android:id="@+id/containerReview"
        android:layout_width="306dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="@+id/imgJogoReviewEditar"
        app:layout_constraintTop_toBottomOf="@+id/titleReviewEditar"
        app:layout_constraintVertical_bias="0.311"
        app:srcCompat="@drawable/background_with_border" />

    <ImageView
        android:id="@+id/btnAdicionarReview"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:background="@drawable/gradient_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toEndOf="@+id/titleReviewEditar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/imgVoltarReviewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/tituloReviewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/containerReview"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/txtDescricaoReviewEditar"
        android:layout_width="197dp"
        android:layout_height="68dp"
        android:text="Não esperava nada do game e fui surpreendida muito positivamente. "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/titleDescricaoReviewEditar"
        app:layout_constraintTop_toBottomOf="@+id/titleDescricaoReviewEditar" />

    <TextView
        android:id="@+id/titleDescricaoReviewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha descrição:"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toEndOf="@+id/imgJogoReviewEditar"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.333" />

    <ImageView
        android:id="@+id/imgJogoReviewEditar"
        android:layout_width="152dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404"
        app:srcCompat="@drawable/_1bd6f2345244a7bdd3b4db99f9398b2" />

    <TextView
        android:id="@+id/titleDataReviewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de postagem"
        android:textColor="#FFFFFF"
        android:textSize="16px"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@+id/containerReview"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.86" />

    <ImageButton
        android:id="@+id/imgDeleteReview"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/gradient_button"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toEndOf="@+id/imgJogoReviewEditar"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.949"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/notaReviewEditar"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:text=" 4/5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/imgJogoReviewEditar"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.114" />

    <ImageButton
        android:id="@+id/btnEditarReview"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/gradient_button"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="@+id/containerReview"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.949"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/vejaMaisReview"
        android:layout_width="63dp"
        android:layout_height="17dp"
        android:text="Veja mais"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toEndOf="@+id/imgJogoReviewEditar"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.741" />

    <TextView
        android:id="@+id/dataReviewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="20/11"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16px"
        app:layout_constraintBottom_toBottomOf="@+id/titleDataReviewEditar"
        app:layout_constraintStart_toEndOf="@+id/titleDataReviewEditar"
        app:layout_constraintTop_toTopOf="@+id/titleDataReviewEditar" />

    <ImageView
        android:id="@+id/starReview"
        android:layout_width="35dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/containerReview"
        app:layout_constraintEnd_toEndOf="@+id/containerReview"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="@+id/containerReview"
        app:layout_constraintTop_toTopOf="@+id/containerReview"
        app:layout_constraintVertical_bias="0.114"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>