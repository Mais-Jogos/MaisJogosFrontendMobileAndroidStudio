<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:id="@+id/gradient"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/infoPerfilDev"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="128dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRequerimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Requerimento de pagamento"
        android:textAllCaps="true"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPerfilDev"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/titleDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Desenvolvedor"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/infoPerfilDev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gradient"
        app:layout_constraintVertical_bias="0.297" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/infoPerfilDev"
        app:layout_constraintStart_toStartOf="@+id/infoPerfilDev"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilDev">

        <TextView
            android:id="@+id/titleNomeDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/silkscreen_regular"
            android:padding="10dp"
            android:text="Nome"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtPerfilNomeDev"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFDFD" />

        <TextView
            android:id="@+id/titleSobreDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/silkscreen_regular"
            android:padding="10dp"
            android:text="Sobre"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtPerfilSobreDev"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="text|textLongMessage|textMultiLine"
            android:textColor="#FFFFFF"
            tools:text="a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleValorVendas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silkscreen_regular"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Valor das vendas: "
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtValorVendas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="0.0"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgPerfilDev"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_image"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@+id/infoPerfilDev"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/infoPerfilDev"
        app:layout_constraintTop_toBottomOf="@+id/titleDev"
        app:srcCompat="@drawable/devboy" />

    <ImageButton
        android:id="@+id/btnPerfilUserSave"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_image"
        app:layout_constraintEnd_toStartOf="@+id/btnPerfilUserDelete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRequerimento"
        app:srcCompat="@drawable/diskette"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btnPerfilUserDelete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/border_image"
        android:src="@drawable/trashcan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRequerimento"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>